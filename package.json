{
  "name": "three-elements",
  "version": "0.0.16",
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "Web Components for Three.js.",
  "homepage": "https://github.com/hmans/three-elements",
  "keywords": [
    "webgl",
    "three",
    "graphics",
    "gamedev",
    "webcomponents"
  ],
  "sideEffects": true,
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.ts",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": "./dist/index.modern.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "concurrently 'yarn watch -f umd' 'yarn examples' -p '{time} [{pid}]'",
    "watch": "yarn clean && microbundle watch --globals three=THREE",
    "build": "yarn clean && microbundle --globals three=THREE",
    "examples": "serve -S examples",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "microbundle": "^0.13.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "serve": "^11.3.2",
    "three": "^0.124.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "three": "^0.122.0"
  }
}
